<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="abc.job.logger.factory" class="Abc\Bundle\JobBundle\Logger\Factory\StreamFactory" public="true">
            <argument type="service" id="abc.job.registry"/>
            <argument>%abc.job.logging.directory%</argument>
        </service>

        <service id="abc.job.log_manager" class="Abc\Bundle\JobBundle\Logger\StreamLogManager" public="true">
            <argument>%abc.job.logging.directory%</argument>
        </service>

    </services>

</container>