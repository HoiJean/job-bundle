<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="abc.job.validator.job_type" class="Abc\Bundle\JobBundle\Validator\Constraint\JobTypeValidator">
            <argument type="service" id="abc.job.registry" />
            <tag name="validator.constraint_validator" />
        </service>

        <service id="abc.job.parameter_validator" class="Abc\Bundle\JobBundle\Validator\Constraint\ParametersValidator" public="true">
            <argument type="service" id="abc.job.registry" />
            <tag name="validator.constraint_validator"/>
        </service>

    </services>

</container>