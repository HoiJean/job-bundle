<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="abc.job.form.type.job" class="Abc\Bundle\JobBundle\Form\Type\JobType" public="true">
            <argument type="service" id="abc.job.registry" />
            <tag name="form.type" alias="abc_job"/>
        </service>

        <service id="abc.job.form.type.message" class="Abc\Bundle\JobBundle\Form\Type\MessageType" public="true">
            <tag name="form.type" alias="abc_job_message"/>
        </service>

        <service id="abc.job.form.type.schedule" class="Abc\Bundle\JobBundle\Form\Type\ScheduleType" public="true">
            <tag name="form.type" alias="abc_job_schedule"/>
        </service>
    </services>

</container>