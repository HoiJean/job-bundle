<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="abc.job.mailer" class="Abc\Bundle\JobBundle\Job\Mailer\Mailer" public="true">
            <argument type="service" id="mailer"/>
            <tag name="abc.job" type="abc.mailer" method="send"/>
        </service>

        <service id="abc.job.sleeper" class="Abc\Bundle\JobBundle\Job\Sleeper">
            <tag name="abc.job" type="abc.sleeper" method="sleep" validationGroups="" validation-groups="" add-validation-groups="" update-validation-groups=""/>
        </service>

        <service id="abc.job.constraint_provider.default_jobs" class="Abc\Bundle\JobBundle\Job\Parameter\DefaultJobsConstraintProvider">
            <tag name="abc.job.constraint_provider"/>
        </service>

    </services>

</container>