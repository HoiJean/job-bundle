<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="abc.job.serializer.job_parameter_handler" class="Abc\Bundle\JobBundle\Serializer\Handler\JobParameterArrayHandler">
            <tag name="jms_serializer.subscribing_handler"/>
        </service>

        <service id="abc.job.serializer.job_deserialization_subscriber" class="Abc\Bundle\JobBundle\Serializer\EventDispatcher\JobDeserializationSubscriber">
            <argument type="service" id="abc.job.registry" />
            <tag name="jms_serializer.event_subscriber"/>
        </service>

    </services>

</container>