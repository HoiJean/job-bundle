<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="abc.job.status" class="Abc\Bundle\JobBundle\Job\Status" public="false">
            <tag name="abc.enum"/>
        </service>

        <service id="abc.job.manager.default" class="Abc\Bundle\JobBundle\Job\Manager" public="true">
            <argument type="service" id="abc.job.registry" />
            <argument type="service" id="abc.job.job_manager"/>
            <argument type="service" id="abc.job.invoker"/>
            <argument type="service" id="abc.job.logger.factory"/>
            <argument type="service" id="abc.job.log_manager"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="abc.job.helper"/>
            <argument type="service" id="abc.job.lock_manager"/>
            <argument type="service" id="logger" on-invalid="null"/>
            <call method="setProducer">
                <argument type="service" id="abc.job.producer"/>
            </call>
            <tag name="monolog.logger" channel="abc.job.manager"/>
        </service>

        <service id="abc.job.invoker" class="Abc\Bundle\JobBundle\Job\Invoker" public="false">
            <argument type="service" id="abc.job.registry"/>
            <call method="setManager">
                <argument type="service" id="abc.job.manager"/>
            </call>
            <call method="setControllerFactory">
                <argument type="service" id="abc.job.controller_factory"/>
            </call>
        </service>

        <service id="abc.job.helper" class="Abc\Bundle\JobBundle\Job\JobHelper" public="false">
            <argument type="service" id="abc.job.logger.factory"/>
        </service>

        <service id="abc.job.registry" class="Abc\Bundle\JobBundle\Job\JobTypeRegistry" public="false">
            <argument type="service" id="abc.job.metadata_factory"/>
            <argument type="service" id="abc.job.queue_config" />
        </service>

        <service id="abc.job.queue_config" class="Abc\Bundle\JobBundle\Job\Queue\QueueConfig" public="false">
            <argument>%abc.job.queue_config%</argument>
            <argument>%abc.job.default_queue%</argument>
        </service>

        <service id="abc.job.type.prototype" class="Abc\Bundle\JobBundle\Job\JobType" abstract="false">
            <!-- serviceId -->
            <argument/>
            <!-- type -->
            <argument/>
            <!-- callable -->
            <argument/>
            <!-- level -->
            <argument/>
        </service>

    </services>

</container>