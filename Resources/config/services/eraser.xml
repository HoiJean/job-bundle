<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="abc.job.eraser" class="Abc\Bundle\JobBundle\Job\Report\Eraser" public="true">
            <argument type="service" id="abc.job.job_entity_manager"/>
            <argument type="service" id="abc.job.log_manager"/>
            <argument type="service" id="logger" on-invalid="null"/>
            <tag name="monolog.logger" channel="abc.job.eraser"/>
        </service>

    </services>

</container>